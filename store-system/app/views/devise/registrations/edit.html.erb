<p class="left-align">
  Editar Cadastro
</p>

<div class="row card-panel"> 
  <div class="col s12 m12 l12">
    <h5 class="left-align">
      Editar Cadastro
    </h5>
  </div>

  <div class="col s12 m12 l12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field col s12">
        <%= f.text_field :name, autofocus: true, :class => 'active' %>
        <%= f.label :name, "Nome" %>
      </div>

      <div class="input-field col s12">
        <%= f.email_field :email, :class => 'active' %>
        <%= f.label :email, "E-mail" %>
      </div>

      <div class="input-field col s12">
        <%= f.password_field :password, autocomplete: "off", :class => 'active' %>
        <%= f.label :password, "Nova senha" %>
      </div>

      <div class="input-field col s12">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'active' %>
        <%= f.label :password_confirmation, "Confirmação da nova senha" %>
      </div>

      <div class="input-field col s12">
        <%= f.password_field :current_password, autocomplete: "off", :class => 'active' %>
        <%= f.label :current_password, "Senha atual" %>
      </div>

      <div class="input-field col s12">
        <%= button_tag :class => "btn waves-effect waves-light" do %>
          <i class="material-icons right">send</i>
          Atualizar
        <% end %>
      </div>
    <% end %>

  </div>

</div>
