<p class="left-align">
  Bancos
</p>

<div class="row card-panel"> 
  <div class="col s12 m12 l12">
    <h5 class="left-align">
      Bancos
    </h5>
    <% if notice %>
      <blockquote class="notice-blockquote">
        <%= notice %>
      </blockquote>
    <% end %>
    <% if alert %>
      <blockquote>
        <%= alert %>
      </blockquote>
    <% end %>
  </div>
  <div class="col s12 m12 l12">
    <% if @banks.size > 0 %>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>URL da WSDL</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @banks.each do |bank| %>
            <tr>
              <td><%= bank.name %></td>
              <td><%= bank.wsdl_location %></td>
              <td><%= link_to 'Mostrar', bank %></td>
              <td><%= link_to 'Editar', edit_bank_path(bank) %></td>
              <td><%= link_to 'Excluir', bank, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p> Nenhum banco cadastrado. </p>
    <% end %>
  </div> 
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <%= link_to new_bank_path, :class => "btn-floating btn-large red" do %>
    <i class="material-icons right">
      add
    </i>
  <% end %>
</div>